{
  "name": "file-type-mime",
  "version": "0.2.0",
  "description": "Utility to parse mime type from a file content",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "check": "node_modules/@biomejs/biome/bin/biome check src",
    "format": "node_modules/@biomejs/biome/bin/biome format src --write",
    "build": "rm -rf dist && tsc",
    "test": "nyc mocha --require ts-node/register src/*.spec.ts",
    "release": "pnpm build && pnpm publish"
  },
  "keywords": [
    "mime",
    "file",
    "type",
    "content",
    "content-type",
    "parse",
    "bytes",
    "json"
  ],
  "author": {
    "name": "Edmundas Ramanauskas",
    "email": "edmundas.ramanauskas@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/redmundas/file-type-mime.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.3.1",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.2",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "**/index.ts",
      "data",
      "dist"
    ],
    "all": true
  }
}
